{
  "name": "oro/crm-application",
  "description": "The OroCRM distribution",
  "homepage": "https://github.com/oroinc/crm-application.git",
  "license": "OSL-3.0",
  "autoload": {
    "psr-4": {"": "src/"},
    "classmap": [
      "src/AppKernel.php"
    ],
    "exclude-from-classmap": [
      "**/Tests/"
    ]
  },
  "repositories": [
    {
      "type": "path",
      "url": "../../package/*"
    },
    {
      "type": "path",
      "url": "../../documentation/code_examples/crm"
    },
    {
      "type": "path",
      "url": "../../documentation/code_examples/platform"
    },
    {
      "type": "composer",
      "url": "https://packagist.orocrm.com"
    }
  ],
  "require": {
    "php": "~8.2.0",
    "oro/crm": "5.1.x-dev",
    "oro/platform": "5.1.x-dev",
    "oro/crm-task-bundle": "5.1.x-dev",
    "oro/crm-call-bundle": "5.1.x-dev",
    "oro/calendar-bundle": "5.1.x-dev",
    "oro/marketing": "5.1.x-dev",
    "oro/platform-serialised-fields": "5.1.x-dev",
    "oro/crm-hangouts-call-bundle": "5.1.x-dev",
    "oro/crm-dotmailer": "5.1.x-dev",
    "oro/crm-zendesk": "5.1.x-dev",
    "oro/mailchimp": "5.1.x-dev",
    "oro/gridfs-config": "5.1.x-dev",
    "oro/crm-documentation-examples": "5.1.x-dev",
    "oro/platform-documentation-examples": "5.1.x-dev"
  },
  "require-dev": {
    "behat/behat": "~3.12.0",
    "behat/gherkin": "~4.9.0",
    "behat/mink": "~1.10.0",
    "friends-of-behat/mink-extension": "~v2.7.2",
    "behat/mink-selenium2-driver": "~1.6.0",
    "friends-of-behat/symfony-extension": "~2.4.0",
    "nelmio/alice": "~3.12.1",
    "theofidry/alice-data-fixtures": "~1.6.0",
    "phpunit/phpunit": "~9.5.27",
    "johnkary/phpunit-speedtrap": "~4.0.1",
    "squizlabs/php_codesniffer": "~3.7.1",
    "phpmd/phpmd": "~2.13.0",
    "sebastian/phpcpd": "~6.0.3",
    "symfony/phpunit-bridge": "~5.4.17",
    "symfony/browser-kit": "~5.4.11",
    "symfony/css-selector": "~5.4.17",
    "symfony/debug-bundle": "~5.4.11",
    "symfony/dom-crawler": "~5.4.17",
    "symfony/stopwatch": "~5.4.13",
    "symfony/var-dumper": "~5.4.17",
    "symfony/var-exporter": "~5.4.17",
    "symfony/web-profiler-bundle": "~5.4.17",
    "friendsofphp/php-cs-fixer": "~3.13.2",
    "oro/twig-inspector": "1.0.*",
    "oro/maker": "5.1.x-dev"
  },
  "config": {
    "bin-dir": "bin",
    "fxp-asset": {
      "enabled": false
    },
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "symfony/runtime": true,
      "symfony/flex": true,
      "php-http/discovery": false
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@set-permissions",
      "@install-assets",
      "@set-assets-version",
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@set-permissions",
      "@update-assets",
      "@set-assets-version",
      "@auto-scripts"
    ],
    "set-permissions": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions"
    ],
    "install-assets": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets"
    ],
    "update-assets": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::updateAssets"
    ],
    "set-assets-version": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
    ],
    "set-parameters": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ParametersHandler::set"
    ],
    "auto-scripts": {
      "oro:assets:install": "symfony-cmd"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "symfony": {
      "require": "~5.4.0"
    },
    "runtime": {
      "dotenv_path": ".env-app",
      "env_var_name": "ORO_ENV",
      "debug_var_name": "ORO_DEBUG",
      "prod_envs": ["prod", "behat_test"]
    },
    "symfony-web-dir": "public",
    "symfony-var-dir": "var",
    "symfony-bin-dir": "bin",
    "symfony-tests-dir": "tests"
  }
}
