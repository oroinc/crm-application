{
    "name": "oro/crm-application",
    "description": "The OroCRM distribution",
    "require": {
        "php": ">=5.3.3",
        "oro/platform": "dev-master",
        "oro/crm": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "http://gitlab.orocrm.com/platform.git"
        },
        {
            "type": "vcs",
            "url": "http://gitlab.orocrm.com/crm.git"
        },
        {
            "type": "vcs",
            "url": "http://gitlab.orocrm.com/vendors/sonataadminbundle.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console fos:js-routing:dump --target=web/js/routes.js"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console fos:js-routing:dump --target=web/js/routes.js"
        ]
    },
    "minimum-stability": "dev",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    }
}
